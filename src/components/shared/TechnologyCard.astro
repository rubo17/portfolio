---
interface Props {
  icon?: any;
  title: string;
  subtitle?: string;
  description: string;
  tags?: string[];
}

const { icon: Icon, title, subtitle, description, tags = [] } = Astro.props;
---

<div class="bg-secondary p-5 rounded-lg border border-gray-700 hover:border-accent transition-all group">
  <div class="flex items-center gap-3 mb-3">
    {Icon && <Icon class="w-10 h-10" />}
    <div>
      <h4 class="font-bold text-gray-200 text-lg">{title}</h4>
      {subtitle && <span class="text-xs text-accent">{subtitle}</span>}
    </div>
  </div>
  <p class="text-sm text-gray-400 leading-relaxed">
    {description}
  </p>
  {tags.length > 0 && (
    <div class="mt-3 flex flex-wrap gap-2">
      {tags.map((tag) => (
        <span class="text-xs bg-accent/10 text-accent px-2 py-1 rounded">{tag}</span>
      ))}
    </div>
  )}
</div>
